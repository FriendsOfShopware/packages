{% extends "base.html.twig" %}

{% block search_bar %}{% endblock %}

{% block title %}Login - FriendsOfShopware Packages{% endblock %}

{% block body %}
    <div class="container">
        <h2>Login</h2>

        {% if loginError is defined %}
            <div class="alert alert-danger" role="alert">
                Authentification error
            </div>
        {% endif %}

        {% if shops is defined %}
            <form method="post" action="{{ url('shop-selection') }}">
                <div class="form-group">
                    <label>Choose shops</label>
                    <select name="shop" class="form-control">
                        {% for shop in shops %}
                            <option value="{{ shop.domain }}">{{ shop.domain }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button class="btn btn-primary">Login</button>
            </form>
        {% else %}
            <form method="post">
                <div class="form-group">
                    <label>Shopware ID</label>
                    <input type="text" class="form-control" name="shopwareId"/>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password"/>
                </div>

                <div class="clearfix">
                    <a href="https://account.shopware.com/recovery" rel="noopener noreferrer" class="float-right">Forgot password?</a>
                </div>

                <button class="btn btn-primary">Login</button>
            </form>
        {% endif %}
    </div>
{% endblock %}