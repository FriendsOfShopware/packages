{% extends "base.html.twig" %}

{% block search_bar %}{% endblock %}


{% block body %}
    <div class="container">
        <h2>Login</h2>

        {% if loginError is defined %}
            <div class="alert alert-danger" role="alert">
                Authentification error
            </div>
        {% endif %}

        {% if domains is defined %}
            <form method="post" action="{{ url('token') }}">
                <div class="form-group">
                    <label>Choose domain</label>
                    <select name="domain" class="form-control">
                        {% for domain in domains %}
                            <option value="{{ domain.domain }}">{{ domain.domain }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button class="btn btn-primary">Login</button>
            </form>
        {% else %}
            <form method="post">
                <div class="form-group">
                    <label>Shopware ID</label>
                    <input type="text" class="form-control" name="shopwareId"/>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password"/>
                </div>

                <div class="clearfix">
                    <a href="https://account.shopware.com/recovery" class="float-right">Forgot password?</a>
                </div>

                <button class="btn btn-primary">Login</button>
            </form>
        {% endif %}
    </div>
{% endblock %}