{% extends "base.html.twig" %}

{% block title %}Browse - FriendsOfShopware Packages{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>Packages</h1>

        <div class="row">
            <div class="col-12">
                <h4>New Releases</h4>

                <ul class="list-unstyled list-packages">
                    {% for package in newPackages %}
                        <li>
                            <a href="{{ url('package', {name: package.composerName ~ '/'}) }}">{{ package.composerName }} <strong>{{ package.newestVersion }}</strong></a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
