{% extends "base.html.twig" %}

{% block search_bar %}{% endblock %}

{% block title %}Login - FriendsOfShopware Packages{% endblock %}

{% block body %}
    <section class="clean-block pb-5">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">Log In</h2>
                <p>Please login with your Shopware Account credentials to generate a Shopware-API token for further authentication</p>
            </div>
            <form method="post">
                {% if loginError is defined %}
                    <div class="alert alert-danger" role="alert">
                        {{ loginError.message }}
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="email">E-mail address</label>
                    <input class="form-control item" name="shopwareId" type="email" id="shopwareId" required>
                </div>
                <div class="mb-3">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required>
                </div>
                <div class="mb-3">
                    <a href="https://account.shopware.com/recovery" rel="noopener noreferrer">Forgot password?</a>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Log In</button>
            </form>
        </div>
    </section>
{% endblock %}
